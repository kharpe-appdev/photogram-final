<h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

  <% User.all.each do |a_user| %>
    
    <tr>
      <td>
        <%= a_user.username %>
      </td>

      <td>
          <% if a_user.private == true %>
            Yes
          <% else %>
            No
          <% end %>
      </td>

      <td>
        <% if session[:user_id] != nil %>
          Follow Button
        <% else %>
        <% end %>
      </td>

      <td>
        <a href="/users/<%= a_user.username %>">Show details</a>
      </td>
    </tr>

  <% end %>

</table>